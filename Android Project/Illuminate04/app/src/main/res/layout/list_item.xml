<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:paddingTop="10dp"
                android:fontFamily="@font/bold"
                android:gravity="left"
                android:text="title"
                android:textColor="@color/grey"
                android:textColorLink="@color/red"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Installs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/textViewTitle"
                android:fontFamily="@font/regular"
                android:background="@drawable/ic_downloads"
                android:textColor="@color/grey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textViewInstalls"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:layout_marginEnd="49dp"
                android:layout_toRightOf="@id/Installs"
                android:fontFamily="@font/bold"
                android:text="# Reviews Here"
                android:textColor="@color/grey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/textViewTitle"
                android:drawableLeft="@drawable/ic_ratings"
                android:layout_below="@id/Installs"
                android:fontFamily="@font/regular"
                android:textColor="@color/grey"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/textViewScore"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/textViewInstalls"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/Score"
                android:fontFamily="@font/bold"
                android:text="Score Here"
                android:textColor="@color/grey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/textViewTitle"
                android:layout_below="@id/Score"
                android:fontFamily="@font/regular"
                android:background="@drawable/ic_size"
                android:textColor="@color/grey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textViewSize"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/textViewScore"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/Size"
                android:fontFamily="@font/bold"
                android:text="# Ratingss Here"
                android:textColor="@color/grey"
                android:textSize="13dp" />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>