<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="Apple MacBook Air Core i5 5th Gen - (8 GB/128 GB SSD/Mac OS Sierra)"
                android:textColor="@color/grey"
                android:textColorLink="@color/red"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Reviews"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/textViewTitle"
                android:fontFamily="@font/regular"
                android:text="Reviews:"
                android:textColor="@color/grey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textViewReview"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:layout_marginEnd="49dp"
                android:layout_toRightOf="@id/Reviews"
                android:fontFamily="@font/bold"
                android:text="# Reviews Here"
                android:textColor="@color/grey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/Ratings"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/textViewTitle"
                android:layout_below="@id/Reviews"
                android:fontFamily="@font/regular"
                android:text="Ratings:"
                android:textColor="@color/grey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textViewRating"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/textViewReview"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/Ratings"
                android:fontFamily="@font/bold"
                android:text="# Ratingss Here"
                android:textColor="@color/grey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/Score"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/textViewTitle"
                android:layout_below="@id/Ratings"
                android:fontFamily="@font/regular"
                android:text="Score:"
                android:textColor="@color/grey"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/textViewsize"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/textViewRating"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/Score"
                android:fontFamily="@font/bold"
                android:text="Score Here"
                android:textColor="@color/grey"
                android:textSize="13dp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>